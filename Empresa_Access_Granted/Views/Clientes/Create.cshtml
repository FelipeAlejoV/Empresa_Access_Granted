@model Empresa_Access_Granted.Models.Cliente

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white text-center">
                    <h2 class="h4 mb-0">Registrar Cliente</h2>
                </div>
                <div class="card-body">
                    <!-- Formulario -->
                    <form asp-action="Create" method="post">
                        @Html.AntiForgeryToken()

                        <!-- Campo Nombre -->
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                            <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del cliente" name="Nombre"  />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <!-- Campo Correo -->
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold">Correo</label>
                            <input asp-for="Correo" class="form-control" placeholder="Ingresa el correo electrónico" name="Correo"   />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <!-- Campo Empresa -->
                        <div class="mb-3">
                            <label asp-for="Empresa" class="form-label fw-bold">Empresa</label>
                            <input asp-for="Empresa" class="form-control" placeholder="Ingresa el nombre de la empresa" name="Empresa" />
                            <span asp-validation-for="Empresa" class="text-danger"></span>
                        </div>

                        <!-- Botones -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="bi bi-save me-2"></i>Guardar
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                                <i class="bi bi-arrow-left-circle me-2"></i>Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Scripts necesarios para validación del lado cliente -->
<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
